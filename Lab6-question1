#include <iostream>
using namespace std;

int main()
{
	int a = 10;
	int *p1 = &a;
	double b = 1.1;
	double *p2 = &b;
	char c = 'c';
	char *p3 = &c;
	cout << " Size of integer variable = "<<sizeof(a)<< " ,size of pointer =  "<<sizeof(p1)<<endl;
	cout <<"Size of decimal variable = "<<sizeof(b)<<" ,size of pointer = "<<sizeof(p2)<<endl;
	cout <<"Size of character variable = "<<sizeof(c)<<" ,size of pointer = "<<sizeof(p3)<<endl;
	return 0;
	
}
